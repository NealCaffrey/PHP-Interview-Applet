/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  padding: 5%;
}
.search {
  display: flex;
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}
.keyword {
  width: 100%;
  height: 80rpx;
  border: 1px solid #d0d0d0;
  border-radius: 20rpx;
  background-color: #ffffff;
}
.keyword-tips {
  text-align: center;
  font-size: 30rpx;
  color: #8a8a8a;
}
.type-list {
  width: 100%;
  overflow: hidden;
  margin-bottom: 5%;
}
.type-item {
  float: left;
  position: relative;
  width: 42.5%;
  margin-left: 5%;
  margin-top: 5%;
  background-color: white;
}
.image-box {
  text-align: center;
  display: flex;
  justify-content: center;
}
.item-image {
  width: 200rpx;
  height: 200rpx;
}
.title-box {
  width: 100%;
  text-align: center;
  display: flex;
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.item-title {
  width: 100%;
  color: black;
}
