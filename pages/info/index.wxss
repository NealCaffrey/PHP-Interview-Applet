/* pages/question/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  width: 100%;
  height: 100%;
}
.question {
  width: 100%;
  text-align: left;
}
.content {
  margin-top:40rpx;
  margin-bottom:40rpx;
}
.bottom {
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom:40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bottom-item {
  width:49%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottom-item-box {
  display: flex;
  justify-content: center;
}
.image {
  width: 80rpx;
  height:80rpx;
  display: flex;
  justify-content: center;
}
